# Environment variables for Geza Dream Homes
# Copy to .env.local and fill values

# Base site URL
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=https://gezadreamhomes.com

# Local database (SQLite for dev)
#DATABASE_URL=file:./dev.db
# For Postgres (example only; put the real value in .env.local):
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require

# Google reCAPTCHA v3 (optional for spam protection)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Reviews moderation (optional)
# If set to true, new reviews require approval (approved=false by default)
REVIEW_REQUIRE_APPROVAL=false

# Email provider (Resend or SendGrid)
RESEND_API_KEY=
SENDGRID_API_KEY=
LEAD_NOTIFICATION_EMAIL=your-email@example.com

# Admin / Auth
# Admin access token (optional; if set, required by /api/admin/* routes and admin pages)
ADMIN_TOKEN=
# JWT secret used for login sessions (set a long random string in .env.local)
AUTH_JWT_SECRET=

# Listings / MLS integration
# Provider can be: mock | rapidapi_realtor | rapidapi_redfin
LISTINGS_PROVIDER=mock
# RapidAPI Realtor (temporary demo provider)
# Some products use host realtor-search.p.rapidapi.com with endpoint /properties/search-buy

# RapidAPI Zillow (unofficial)
RAPIDAPI_ZILLOW_KEY=
RAPIDAPI_ZILLOW_HOST=zillow-com1.p.rapidapi.com
ZILLOW_DEFAULT_LOCATION=Kansas City, MO
# Others use realtor.p.rapidapi.com with /properties/v3/list
RAPIDAPI_REALTOR_KEY=
RAPIDAPI_REALTOR_HOST=realtor.p.rapidapi.com
# Optional: default location when none is provided in queries
REALTOR_DEFAULT_LOCATION=Kansas City, MO
# RapidAPI Redfin (rental or sale search)
RAPIDAPI_REDFIN_KEY=
RAPIDAPI_REDFIN_HOST=redfin-com-data.p.rapidapi.com
# rent | sale (determines endpoint path)
REDFIN_SEARCH_TYPE=rent
# Optional: default location when none is provided in queries
REDFIN_DEFAULT_LOCATION=Los Angeles, CA
# Optional: region identifier required by some sale endpoints
REDFIN_REGION_ID=
# Optional: pagination controls (integers)
REDFIN_PAGE=1
REDFIN_RESULTS_PER_PAGE=50
# Optional: if you have an IDX provider that gives you an embeddable search URL, set it and we'll render an iframe instead of cards
NEXT_PUBLIC_IDX_IFRAME_URL=

# Supabase (database)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Maps
NEXT_PUBLIC_GOOGLE_MAPS_KEY=
NEXT_PUBLIC_MAPBOX_TOKEN=
